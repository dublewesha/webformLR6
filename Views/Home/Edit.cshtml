@{

}

<form method="get" action="">
    <div class="form-group">
        <label>Id</label>
        <input disabled class="form-control" value="@Model.Id">
        <small class="form-text text-muted">Неизменяемо</small>
    </div>
    <div class="form-group">
        <label>Имя</label>
        <input id="name" class="form-control" placeholder="Имя" value="@Model.Name">
    </div>
    <div class="form-check">
        <label>Выполнено?</label>
        @{
            bool lol = Model.IsComplete;
            string val = string.Empty;
            if (lol)
                val = "checked";
            else
                val = "";
        }
        <input id="checkbox1" onchange="change()" class="form-check-input" type="checkbox" @val value="1">
        <script type="text/javascript">
            function change(){
                var checkbox = document.getElementById("checkbox1");
                if (checkbox.checked)
                    checkbox.value = 1;
                else
                    checkbox.value = 0;
            }
        
        </script>
    </div>
    <div style="margin-top:20px">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Api">Назад</a>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Save">Сохранить</a>
    </div>
</form>
