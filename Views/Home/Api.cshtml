@{

}
@{
    if (!string.IsNullOrWhiteSpace(ViewBag.Danger))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Danger
        </div>
    }
    if (!string.IsNullOrWhiteSpace(ViewBag.Suc))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Suc
        </div>
    }
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">IsComplete</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th scope="row">@item.Name</th>
                    <th scope="row">@item.IsComplete </th>
                    <th scope="row">
                        <a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Home" asp-action="Edit">Edit</a>
                        <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Home" asp-action="Remove">Remove</a>
                    </th>
                </tr>
            }
        }
    </tbody>
</table>